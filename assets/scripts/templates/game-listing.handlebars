{{#each games as |game|}}

<tr>
    <td>{{game.title}}</td>
    <td>  {{#if game.genre}}
        {{game.genre}}
      {{else}}
        No genre.
      {{/if}} </td>
      <td> {{game.platform}} </td>
        <td>  {{#if game.release}}
            {{game.release}}
          {{else}}
            No relese.
          {{/if}} </td>
          <td>  {{#if game.developer}}
              {{game.developer}}
            {{else}}
              No developer.
            {{/if}} </td>
            <td>  {{#if game.publisher}}
                {{game.publisher}}
              {{else}}
                No publisher.
              {{/if}} </td>
              <td>  {{#if game.playtime}}
                  {{game.playtime}} hours
                {{else}}
                  No playtime.
                {{/if}} </td>
                  <td>
                    <form class="delete-game">
                      <fieldset>
                        <input class='pop-up-fields text-field' type='hidden' value={{game.id}} name='game[id]'>
                        <button class="update-button btn btn-primary btn-lg" type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button
                      </fieldset>
                    </form>
                    <button data-id="{{game.id}}" type="button" class="update-button btn btn-primary btn-lg" data-toggle="modal" data-target="#updateGameModal">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                  </button>
                    </td>

  </tr>

